<div class="content-header">
  <h2>Profile</h2>
</div>

<div class="profile-section">
  <div class="card">
    <div class="card-body text-center">
      <img src="<%= user.photoURL || '/images/default-avatar.png' %>" alt="Profile" class="profile-img-lg mb-3">
      
      <form id="profileForm">
        <div class="mb-3">
          <label class="form-label">Display Name</label>
          <input type="text" class="form-control" name="displayName" value="<%= user.displayName %>" required>
        </div>
        
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" class="form-control" value="<%= user.email || 'Not set' %>" disabled>
        </div>
        
        <div class="mb-3">
          <label class="form-label">Phone</label>
          <input type="tel" class="form-control" value="<%= user.phone || 'Not set' %>" disabled>
        </div>
        
        <% if (user.storeCreated) { %>
        <div class="mb-3">
          <label class="form-label">Your Store</label>
          <div class="input-group">
            <input type="text" class="form-control" value="<%= user.storeName %>" disabled>
            <a href="/shop/<%= user.storeSlug %>" class="btn btn-outline-primary" target="_blank">
              <i class="bi bi-box-arrow-up-right"></i> Visit
            </a>
          </div>
        </div>
        <% } %>
        
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-check-lg me-2"></i>Save Changes
        </button>
      </form>
    </div>
  </div>
</div>
