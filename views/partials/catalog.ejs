<div class="content-header">
  <h2>Product Catalog</h2>
  <p class="text-muted">Choose a product to customize and sell</p>
</div>

<% for (const [categoryKey, category] of Object.entries(catalogItems)) { %>
<div class="catalog-section mb-4">
  <h4 class="category-title">
    <i class="bi bi-tag me-2"></i><%= category.name %>
  </h4>
  
  <div class="row g-3">
    <% category.items.forEach(item => { %>
    <div class="col-6 col-md-4 col-lg-3">
      <a href="/dashboard/catalog/customize/<%= item.id %>" class="product-card">
        <div class="card h-100">
          <div class="card-img-wrapper">
            <img src="<%= item.image %>" class="card-img-top" alt="<%= item.name %>">
          </div>
          <div class="card-body text-center">
            <h6 class="card-title"><%= item.name %></h6>
            <p class="card-text text-primary fw-bold">From KES <%= item.basePrice %></p>
          </div>
        </div>
      </a>
    </div>
    <% }); %>
  </div>
</div>
<% } %>
